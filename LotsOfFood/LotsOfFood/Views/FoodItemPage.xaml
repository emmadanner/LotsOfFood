<?xml version="1.0" encoding="UTF-8"?>
    
<!--item details and options for food items-->

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:LotsOfFood.ViewModels" 
             x:Class="LotsOfFood.Views.FoodItemPage"
             Shell.PresentationMode="ModalAnimated"
             xmlns:local="clr-namespace:LotsOfFood.ViewModels"
             xmlns:model="clr-namespace:LotsOfFood.Models" >

    <StackLayout Padding="20">
        <Image Source="{Binding FoodItem.ImageUrl}" Aspect="AspectFill" HeightRequest="200" />
        <Label Text="{Binding FoodItem.Name}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding FoodItem.Description}" FontSize="18" />
        <Label Text="{Binding FoodItem.Price} " FontSize="18" />
    </StackLayout>
</ContentPage>